<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tick.elp.Controller.TestController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="选择词库:" />
        <ComboBox fx:id="tableSelector" prefWidth="150.0" />
        <Button text="开始测试" onAction="#startTest" />
    </HBox>
    
    <VBox fx:id="questionArea" spacing="15.0" visible="false">
        <Label fx:id="questionLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
        
        <VBox fx:id="optionsBox" spacing="10.0" visible="false" />
        
        <VBox fx:id="fillBox" spacing="10.0" visible="false">
            <Label fx:id="hintLabel" style="-fx-font-size: 14px;" wrapText="true"/>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="inputField" promptText="输入完整单词" HBox.hgrow="ALWAYS"/>
                <Button text="提交" onAction="#checkFillAnswer" />
            </HBox>
        </VBox>
        
        <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="nextButton" text="下一题" onAction="#onNext" disable="true"/>
        </HBox>
    </VBox>
</VBox>
